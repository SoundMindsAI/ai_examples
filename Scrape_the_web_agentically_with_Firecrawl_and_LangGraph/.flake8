[flake8]
max-line-length = 88
extend-ignore = E203
max-complexity = 10
docstring-convention = google
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401
    # Allow missing docstrings in tests
    tests/*:D100,D101,D102,D103,D104
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info
